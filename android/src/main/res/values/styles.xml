<resources>
    <style name="CustomAppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/CustomAppTheme.ActionBarStyle</item>
    </style>

    <style name="CustomAppTheme.ActionBarStyle" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@android:color/holo_orange_light</item>
        <item name="android:titleTextStyle">@style/CustomAppTheme.ActionBar.TitleTextStyle</item>
        <item name="android:actionMenuTextColor">@color/colorText</item>
    </style>

    <style name="CustomAppTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mainButtonStyle">
        <item name="android:background">@android:color/holo_orange_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="cheatButtonStyle">
        <item name="android:background">@android:color/holo_orange_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#007ab2</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="QuestionTextView" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:padding">24dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="AnswerTextView" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">24dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

</resources>
